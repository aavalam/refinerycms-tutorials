<% content_for :body_content_title do %>
  <%= @tutorial.title %>
<% end %>

<% content_for :body_content_left do %>
  
  <div>
    <h3>Title</h3>
    <%= @tutorial.title %>
  </div>
  
  <div>
    <h3>Description</h3>
    <%= @tutorial.description %>
  </div>
  
  <div>
    <h3>Category</h3>
    <%= @tutorial.category %>
  </div>
  
  <div>
    <h3>Author</h3>
    <%= @tutorial.author %>
  </div>
  
  <div>
    <h3>Content</h3>
    <%= @tutorial.content %>
  </div>
  
<% end %>

<% content_for :body_content_right do %>
  <h2><%= t('.other') %></h2>
  <ul id="tutorials">
    <% @tutorials.each do |tutorial| %>
      <li>
        <%= link_to tutorial.title, tutorial_url(tutorial) %>
      </li>
    <% end %>
  </ul>
<% end %>

<%= render :partial => "/shared/content_page" %>
