<aside id="featured" class="body">
  <article>
	  <a href="http://refinerycms.com"><figure>
      <%= image_tag "logo-small-medium.png", :theme => true, :alt => "Refinery CMS Logo" %>
	  </figure></a>
	  <hgroup>
		  <h2>Newest Tutorial</h2>
		  <% unless (last_tutorial = Tutorial.live.last).nil? %>
        <h3><%= link_to last_tutorial.title, tutorial_url(last_tutorial) %></h3>
        <h6>by <%= last_tutorial.author %></h6>
      <% else %>
        No Tutorials!
      <% end %>
	  </hgroup>
	  <% unless last_tutorial.nil? %>
      <p>
        <%= last_tutorial.description %>
      </p>
    <% end %>
      
  </article>
</aside><!-- /#featured -->