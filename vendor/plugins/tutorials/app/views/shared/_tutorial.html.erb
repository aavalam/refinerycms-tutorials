<li><article class="hentry">	
	<header> 
    <h2 class="entry-title"><%= link_to tutorial.title, tutorial %></h2> 
	</header> 
	
  <footer class="post-info"> 
    <abbr class="published" title="<%= tutorial.created_at.xmlschema %>"><!-- YYYYMMDDThh:mm:ss+ZZZZ --> 
      <%= tutorial.created_at.strftime("%B %d, %Y") %>
		</abbr> 

		<address class="vcard author"> 
      <%= tutorial.author %>
		</address> 
				
    <a href="<%= tutorial_path(tutorial) %>#disqus_thread">Comments</a> 
	</footer><!-- /.post-info --> 
			
	<div class="entry-content"> 
    <p><%= tutorial.description %></p> 
    <%= render :partial => '/shared/tag_list', :locals => { :tutorial => tutorial } %>
	</div><!-- /.entry-content --> 
</article></li> 