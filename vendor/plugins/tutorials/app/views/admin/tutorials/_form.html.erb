<% form_for [:admin, @tutorial] do |f| -%>
  <%= f.error_messages %>

  <div class='field'>
    <%= f.label :title -%>
    <%= f.text_field :title, :class => 'larger widest' -%>
  </div>
  
  <div class='clearfix'>
    <div class='hemisquare' style='padding: 0px; margin: 10px 10px 10px 0px'>
      <div class='field'>
        <%= f.label :description -%>
        <%= f.text_area :description, :rows => 5, :cols => 75  -%>
      </div>
    </div>
  
    <div class='hemisquare' style='padding: 0px; margin: 10px 0px 10px 60px'>  
      <div class='field'>
        <%= f.label :category -%>
        <%= f.text_field :category, :class => 'widest'-%>
      </div>
  
      <div class='field'>
        <%= f.label :author -%>
        <%= f.text_field :author, :class => 'widest' -%>
      </div>
    </div>
  </div>
  
  <div class='field'>
    <%= f.label :content -%>
    <%= f.text_area :content, :rows => 20, :class => 'wymeditor widest' -%>
  </div>
  
  <%= render :partial => "/shared/admin/form_actions", :locals => {:f => f, :continue_editing => true} %>
  
<% end -%>
